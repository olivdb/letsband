<li class="contact" id="contact_<%= contact.id%>">
	<table class="table table-hover" >
		<tr>
			<td style="width:53px;padding:3px;"><%= gravatar_for contact %></td>
			<td><%= link_to contact.name, contact %>
				<br/>
					<%= contact.city_id.present? ? City.find(contact.city_id).fullname : 'Unknown' %>


				</td>
						<td style="text-align:right;padding:3px;"><%= link_to(image_tag('img/ico2.png', height: 12), new_message_path(recipient_id: contact.id)) %>
							<%= link_to image_tag("delete.png", size:'12x12'), current_user.contact_records.find_by_contact_id(contact.id), method: :delete, remote: true, 
                          data: { confirm: "Are you sure you want to delete this contact?" }, class: 'delete_contact_link' %></td>
					</tr>
			
		</tr>
	</table>
</li>
