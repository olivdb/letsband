<li class="read">
	<table>
		<tr>
			<td><%= gravatar_for contact %></td>
			<td>
				<table>
					<tr>
						<td class="friend_name"><%= link_to contact.name, contact %></td>
						<td><%= link_to("Send Message", new_message_path(recipient_id: contact.id)) %></td>
					</tr>
					<tr>
						<td colspan=1 class="subject"><em><%= City.find(contact.city_id).fullname %></em></td>
						<td><%= link_to image_tag("delete.png", size:'16x16'), current_user.contact_records.find_by_contact_id(contact.id), method: :delete,
                          data: { confirm: "Are you sure you want to delete this contact?" } %></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</li>