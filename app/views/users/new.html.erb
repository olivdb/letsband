<% provide(:title, 'Sign up') %>
<center>
<h1>Sign up</h1>


<div style="width:29%;" class="well text2 center">

    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :firstname, placeholder: "First name", class: "half_width" %>
           <%= f.label :surname %>
      <%= f.text_field :surname, placeholder: "Last name", class: "half_width" %>
       
      <%= f.label :email %>
      <%= f.text_field :email ,placeholder: "", class: "full_width" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "full_width"  %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "full_width" %>
 <%= f.submit "Create my account !", style: "width:99%;", class: "btn btn-medium btn-success" %>
      </div>

    <% end %>
    </center>
<br /><br /><br /><br />
