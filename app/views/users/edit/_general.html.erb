<p>
  <%= form_for @user do |f| %>
    <%= render 'shared/error_messages' %>
    <p>
    <div class="avatar-profile">

              <%= gravatar_for @user, class: 'avatar_size avatar-border'  %>

</div>
  <a href="http://gravatar.com/emails">Change photo</a>
</p>


    <%= f.label :name %>
    <%= f.text_field :firstname, placeholder: "First name", class: "half_width" %><br/>
    <%= f.text_field :surname, placeholder: "Last name", class: "half_width" %>

    <%= f.label :email %>
    <%= f.text_field :email , class: "full_width" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "full_width"  %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation, class: "full_width" %>
<br />
    <%= f.submit "Save changes", class: "btn btn-small btn-primary" %>
  <% end %>

 
</p>