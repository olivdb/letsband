<p>
  <%= form_for @band do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Band name" %>

    <%= f.label :genre %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, 'id', 'name', f.object.genre_id) %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <br />
    <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
  <% end %>

</p>