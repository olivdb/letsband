<li>
  <div class = 'row'>
    <div class = 'span2'>
      <% if band.image.path.nil? %>
        <%= image_tag band.image.url(:thumb) %>
      <% else %>
        <%= image_tag band.image.url(:thumb), size: Paperclip::Geometry.from_file(band.image.path(:thumb)).to_s %>
      <% end %>
    </div>
    <div class = 'span8'>
      <div class="logo"></div>
      <p>
      	<%= link_to band.name, band %> in <%= band.city.fullname %>
        <% 
          ref_city = City.find_by_id(params[:band_city_id])
          if band.city.id != ref_city.id 
            distance_ref_city = ref_city.distance(band.city)
        %>
          (<%= (distance_ref_city.round(1)).to_s %> km from <%= ref_city.name %>)
        <% 
          end 
        %>
      <p>
        <b><%= band.members.count.to_s %> members</b>
        <% band.memberships.sort{ |a,b| a.instrument.name.downcase <=> b.instrument.name.downcase }.each do |membership| %>
          <% if membership.role != 'invited' && membership.role != 'open' %>
              <%= image_tag(membership.instrument.image_path, size: "32x32", alt: membership.instrument.name) %>
          <% end %>
        <% end %>
      </p>
      <p>
        <%= band.description %>
      </p>
    </div>
  </div>
</li>