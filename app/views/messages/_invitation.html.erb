<% friend = current_user_is_recipient ? invitation.sender : invitation.recipient %>
<li class="invitation <%= invitation.message_read? ? "read" : "not_read" %>">
	<table>
		<tr>
			<td><%= gravatar_for invitation.sender %></td>
			<td>
				<table>
					<tr>
						<td class="friend_name"><%= (current_user_is_recipient ? "From: ": "To: ") %><%= link_to friend.name, friend %></td>
						<td><%= link_to("View", invitation) %></td>
					</tr>
					<tr>
						<td class="subject"><em><%= link_to (invitation.subject.blank? ? '(No subject)' : invitation.subject), invitation %></em></td>
						<% confirm_message = current_user_is_recipient ? "Are you sure you want to delete this invitation message? You will still be able to accept or turn down this invitation via the 'My Bands' section of your user profile." : "Are you sure you want to delete this invitation message ? Your friend will still be able to accept or turn down this invitation. If you want to cancel this invitation, delete your friend's membership from the management panel of your band." %>
						<td><%= link_to image_tag("delete.png", size:'16x16'), invitation, method: :delete,
                          data: { confirm: confirm_message } %></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
</li>