<% if @message.inviting_band_id.present? %>
	<%= render :partial => 'messages/invitation_full', :locals => { :message => @message, :is_last_message_in_thread => true } %>
<% else %>
	<%= render :partial => 'messages/message_full', :locals => { :message => @message, :is_last_message_in_thread => true } %>
<% end %>