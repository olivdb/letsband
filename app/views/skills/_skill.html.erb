<tr>
    <td>
      	<% skill.expertise.times do %>
        <%=  image_tag(skill.instrument.image_path, size: "25x25", alt: skill.instrument.name) %>
        <% end %>

        <% (3-skill.expertise).times do %>
        <%=  image_tag(skill.instrument.image_path, size: "25x25", alt: skill.instrument.name, class: 'halfopacity') %>
        <% end %>
    </td>
    <td>
        <%= image_tag(skill.experience.to_s + '.png', size: "25x25", alt: skill.experience.to_s + ' years of experience') %>
    </td>
    <td>
        <% if skill.education == 1 %>
        <%= image_tag('school.jpg', size: "25x25", alt: 'Academy student') %>
        <% elsif skill.education >= 2 %>
        <%= image_tag('degree.png', size: "25x25", alt: 'Academy graduate') %>
        <% end %>

        <% if skill.education == 3 %>
        <%= image_tag('school.jpg', size: "25x25", alt: 'Conservatory student') %>
        <% elsif skill.education >= 4 %>
        <%= image_tag('degree.png', size: "25x25", alt: 'Conservatory graduate') %>
        <% end %>
    </td>
</tr>