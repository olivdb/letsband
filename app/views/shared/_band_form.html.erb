<div class='center hero-unit'>
<%= form_tag bands_path, :method => 'get' do %>
  <p>
    I'm looking for a <b>music band</b> playing

    <%= select_tag 'genre_id', options_from_collection_for_select(Genre.all, 'id', 'name', params[:genre_id]), { class: 'input-medium search-query' } %>  

    in

    <%= text_field_tag 'band_city_name', nil, :class => 'search-query ui-autocomplete-input', :placeholder => 'City name', data: {autocomplete_source: cities_path}, class: 'input-large', id: 'band_city_name' %> 
    <%= hidden_field_tag 'band_city_id' %> 

    <%= submit_tag 'Find !', :name => nil, class: 'btn btn-primary' %>
  </p>
<% end %>
</div>


